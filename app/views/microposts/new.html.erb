<%= form_for Micropost.new do |f| %>
  <div class="form-group">
    <%= f.text_field :content %>
  </div>
  
  <div class="form-group">
    <%= f.text_field :user_id, value: current_user.id, class:'d-none'%>
  </div>
  <br>
  <div class="text-center">
    <%= f.submit 'Create Post', class: 'btn btn-primary' %>
  </div>
<% end %>