<p id="notice"><%= notice %></p>

<h1>
  <%= gravatar_for @user %>
  
</h1>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %> |
<%= link_to 'logout', logout_path %>

<div class="span8">

       <%= render 'follow_form' if signed_in? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>

      
    
  </div>
